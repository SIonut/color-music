<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="#000016"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/energized"
            android:layout_width="80px"
            android:layout_height="80px"
            android:text="energized"
            android:hint="00CC00"
            android:textColor="#00CC00"
            android:background="#00CC00"
            android:backgroundTint="#00CC00"
            android:layout_above="@+id/fabulous"
            android:layout_alignEnd="@+id/proud" />

        <Button
            android:id="@+id/proud"
            android:layout_width="90px"
            android:layout_height="90px"
            android:text="proud"
            android:hint="99FF33"
            android:textColor="#99FF33"
            android:background="#99FF33"
            android:backgroundTint="#99FF33"
            android:layout_below="@+id/hurt"
            android:layout_toEndOf="@+id/fabulous" />

        <Button
            android:id="@+id/angry"
            android:layout_width="100px"
            android:layout_height="100px"
            android:text="angry"
            android:layout_above="@+id/loved"
            android:layout_toEndOf="@+id/loved"
            android:hint="351423"
            android:textColor="#351423"
            android:background="#351423"
            android:backgroundTint="#351423" />

        <Button
            android:id="@+id/sad"
            android:layout_width="90px"
            android:layout_height="90px"
            android:text="sad"
            android:hint="9999FF"
            android:textColor="#9999FF"
            android:background="#9999FF"
            android:backgroundTint="#9999FF"
            android:layout_alignBaseline="@+id/excited"
            android:layout_alignBottom="@+id/excited"
            android:layout_toEndOf="@+id/exhausted" />

        <Button
            android:id="@+id/furious"
            android:layout_width="90px"
            android:layout_height="90px"
            android:text="furious"
            android:hint="870000"
            android:textColor="#870000"
            android:background="#870000"
            android:backgroundTint="#870000"
            android:layout_alignBottom="@+id/optimistic"
            android:layout_toStartOf="@+id/fabulous" />

        <Button
            android:id="@+id/pessimistic"
            android:layout_width="100px"
            android:layout_height="100px"
            android:text="pessimistic"
            android:hint="834404"
            android:textColor="#834404"
            android:background="#834404"
            android:backgroundTint="#834404"
            android:layout_below="@+id/furious"
            android:layout_alignStart="@+id/hurt" />

        <Button
            android:id="@+id/hurt"
            android:layout_width="90px"
            android:layout_height="90px"
            android:text="hurt"
            android:hint="666600"
            android:textColor="#666600"
            android:background="#666600"
            android:backgroundTint="#666600"
            android:layout_below="@+id/pessimistic"
            android:layout_toEndOf="@+id/lost"
            android:layout_marginStart="15dp" />

        <Button
            android:id="@+id/optimistic"
            android:text="optimistic"
            android:layout_width="100px"
            android:layout_height="100px"
            android:hint="FF9999"
            android:textColor="#FF9999"
            android:background="#FF9999"
            android:backgroundTint="#FF9999"
            android:layout_alignBottom="@+id/strong"
            android:layout_toEndOf="@+id/strong" />

        <Button
            android:id="@+id/excited"
            android:layout_width="100px"
            android:layout_height="100px"
            android:text="excited"
            android:hint="FF0000"
            android:textColor="#FF0000"
            android:background="#FF0000"
            android:backgroundTint="#FF0000"
            android:layout_above="@+id/optimistic"
            android:layout_toEndOf="@+id/happy" />

        <Button
            android:id="@+id/loved"
            android:layout_width="90px"
            android:layout_height="90px"
            android:text="loved"
            android:hint="CE3DFF"
            android:textColor="#CE3DFF"
            android:background="#CE3DFF"
            android:backgroundTint="#CE3DFF"
            android:layout_alignBottom="@+id/excited"
            android:layout_toEndOf="@+id/hurt"
            android:layout_marginBottom="23dp" />

        <Button
            android:id="@+id/exhausted"
            android:layout_width="90px"
            android:layout_height="90px"
            android:text="exhausted"
            android:hint="CCCC00"
            android:textColor="#CCCC00"
            android:background="#CCCC00"
            android:backgroundTint="#CCCC00"
            android:layout_alignBaseline="@+id/furious"
            android:layout_alignBottom="@+id/furious"
            android:layout_toStartOf="@+id/energized" />

        <Button
            android:id="@+id/fabulous"
            android:layout_width="90px"
            android:layout_height="90px"
            android:text="fabulous"
            android:hint="6666FF"
            android:textColor="#6666FF"
            android:background="#6666FF"
            android:backgroundTint="#6666FF"
            android:layout_alignBaseline="@+id/lost"
            android:layout_alignBottom="@+id/lost"
            android:layout_toEndOf="@+id/pessimistic" />

        <Button
            android:id="@+id/happy"
            android:layout_width="90px"
            android:layout_height="90px"
            android:text="happy"
            android:hint="66B2FF"
            android:textColor="#66B2FF"
            android:background="#66B2FF"
            android:backgroundTint="#66B2FF"
            android:layout_above="@+id/hurt"
            android:layout_toEndOf="@+id/chill" />

        <Button
            android:id="@+id/lost"
            android:layout_width="100px"
            android:layout_height="100px"
            android:text="lost"
            android:hint="6976B7"
            android:textColor="#6976B7"
            android:background="#6976B7"
            android:backgroundTint="#6976B7"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/pessimistic"
            android:layout_toEndOf="@+id/emotional" />

        <Button
            android:id="@+id/emotional"
            android:layout_width="100px"
            android:layout_height="100px"
            android:text="emotional"
            android:hint="330066"
            android:textColor="#330066"
            android:background="#330066"
            android:backgroundTint="#330066"
            android:layout_below="@+id/hurt"
            android:layout_toStartOf="@+id/happy" />

        <Button
            android:id="@+id/strong"
            android:layout_width="90px"
            android:layout_height="90px"
            android:text="strong"
            android:layout_alignStart="@+id/joyful"
            android:layout_below="@+id/joyful"
            android:hint="FFFF09"
            android:textColor="#FFFF09"
            android:background="#FFFF09"
            android:backgroundTint="#FFFF09" />

        <Button
            android:id="@+id/joyful"
            android:layout_width="90px"
            android:layout_height="90px"
            android:text="joyful"
            android:layout_alignStart="@+id/chill"
            android:layout_below="@+id/chill"
            android:layout_marginStart="19dp"
            android:layout_marginTop="12dp"
            android:hint="99FF00"
            android:textColor="#99FF00"
            android:background="#99FF00"
            android:backgroundTint="#99FF00" />

        <Button
            android:id="@+id/crazy"
            android:layout_width="90px"
            android:layout_height="90px"
            android:text="crazy"
            android:layout_below="@+id/lazy"
            android:layout_toStartOf="@+id/strong"
            android:hint="FF9900"
            android:textColor="#FF9900"
            android:background="#FF9900"
            android:backgroundTint="#FF9900" />

        <Button
            android:id="@+id/lazy"
            android:layout_width="100px"
            android:layout_height="100px"
            android:text="lazy"
            android:hint="FFFF99"
            android:textColor="#FFFF99"
            android:background="#FFFF99"
            android:backgroundTint="#FFFF99"
            android:layout_alignBottom="@+id/strong"
            android:layout_toStartOf="@+id/joyful" />

        <Button
            android:id="@+id/chill"
            android:layout_width="90px"
            android:layout_height="90px"
            android:layout_marginTop="61dp"
            android:text="chill"
            android:textColor="#99FFFF"
            android:hint="99FFFF"
            android:background="#99FFFF"
            android:backgroundTint="#99FFFF"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/find"
            android:layout_marginEnd="39dp" />

        <Button
            android:id="@+id/find"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="150px"
            android:layout_height="70px"
            android:text="FIND"
            android:textColor="#000016"
            android:background="#FEFFAA"
            android:backgroundTint="#FEFFAA"
            android:fontFamily="cursive"
            android:layout_marginBottom="16dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/selected_moods"
            android:layout_width="300px"
            android:textSize="80px"
            android:scrollbars="vertical"
            android:fontFamily="casual"
            android:layout_height="80px"
            android:textColor="#FEFFAA"
            android:layout_below="@+id/emotional"
            android:layout_marginTop="32dp"
            android:layout_above="@+id/find"
            android:layout_alignStart="@+id/lazy"
            android:layout_alignEnd="@+id/sad" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#00002F"
        android:layout_gravity="start">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/hello_navigator"
            android:text="Hello there!"
            android:textSize="30dp"
            android:paddingTop="40px"
            android:paddingLeft="20px"
            android:textColor="#FEFFAA"
            android:fontFamily="casual"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/playlist_navigator"
            android:layout_below="@+id/hello_navigator"
            android:text="Your playlists"
            android:textSize="25dp"
            android:paddingTop="70px"
            android:paddingLeft="40px"
            android:textColor="#FE9FAA"
            android:fontFamily="casual"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/liked_navigator"
            android:layout_below="@+id/hello_navigator"
            android:text="Liked"
            android:textSize="25dp"
            android:paddingLeft="40px"
            android:textColor="#FE9FAA"
            android:fontFamily="casual"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/top_playlists_navigator"
            android:layout_below="@+id/playlist_navigator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FE9FAA"
            android:fontFamily="casual"
            android:textAlignment="center"
            android:textSize="25dp"
            android:paddingLeft="40px"
            android:text="Top playlists"/>

    </RelativeLayout>

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>